<%- layout('/layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
  
<h3>Create a new Listing</h3>

<form action="/listings" method="post" novalidate class=" needs-validation " enctype="multipart/form-data" >
   <div class="mb-3"><label for="title" class="form-label">Title</label>
    <input type="text" name="listings[title]" placeholder="Add a catchy Title... " class="form-control" required>
  <div class="valid-feedback">Title looks good! </div>
  <div class="invalid-feedback">Please enter a title !</div>

  </div>

    <div class="mb-3">
<label for="discription"  >Description</label>
<textarea name="listings[description]" id="" cols="30" rows="10" placeholder="enter description" class="form-control" required></textarea>
<div class="invalid-feedback">Please enter short description</div>
    </div>
<div class="mb-3">
  <label for="image" class="form-label">Upload Image</label>
  <input type="file" name="listings[image]" placeholder="Upload Img/URL" class="form-control">
  </div>
<div class="row mt-3">

<div class="mb-3 col-md-4">
<label for="price"class="form-label">price</label>
<input type="number" name="listings[price]" placeholder="1200"  class="form-control" required>
<div class="invalid-feedback">Please enter valid price</div>
</div>
<div class="mb-3 col-md-8">
<label for="country"class="form-label">Country</label>
<input type="text" name="listings[country]" placeholder="india" class="form-control" required>
<div class="invalid-feedback">Country name should be valid</div>
</div>
</div>
<div class="mb-3">
  <label for="location"class="form-label">Location</label>
  <input type="text" name="listings[location]" placeholder="Jaipur,Rajsthan" class="form-control" required>
  <div class="invalid-feedback">Location should be valid</div>

</div> 


<button class="btn btn-dark add-btn mt-2">Add</button>
</form>
<br>
</div>
</div>